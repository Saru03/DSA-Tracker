<% layout('layouts/boilerplate') %>
    <div class="row">
            <% for(let problem of problems) { %>
                <div class="col-md-12 mb-3">
                    <div class="card <%= problem.reviewPriority === 'low' ? 'low-priority' : 
                                 problem.reviewPriority === 'mid-way' ?  'mid-way-priority': 
                                 'high-priority' %>">
                        <div class="card-body md-4">
                            <h5 class="card-title mb-3"><strong><%= problem.title %></strong></h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <span class="tags card-text"><strong>Review Priority:</strong> <%= problem.reviewPriority %></span>
                                </div>
                                <div class="col-md-4">
                                    <span class="tags card-text"><strong>Difficulty:</strong> <%= problem.difficulty %></span>
                                </div>
                                <div class="col-md-4">
                                    <span class="tags card-text"><strong>Topic:</strong> <%= problem.topic %></span>
                                </div>
                            </div> 
                            <div class="mt-3">
                                <a class="btn view-button"  href="/problems/<%= problem._id %>">View <%= problem.title %></a>
                            </div> 
                           
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        </body>
        </html>
        


    